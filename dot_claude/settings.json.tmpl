{
  "cleanupPeriodDays": 99999,
  "env": {
    "IS_DEMO": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
{{- if eq .chezmoi.os "darwin" }}
      "Skill(vp-reporter)",
      "Bash(vp *)",
{{- end }}
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(python3 *)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
{{- if eq .chezmoi.os "darwin" }}
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "vp \"クロードからの通知があるわよ！\"",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ \"$CLAUDECODE\" = \"1\" ] && exit 0; INPUT=$(cat); echo \"$INPUT\" | jq -e '.stop_hook_active | not' > /dev/null && vp \"作業が完了したわよ！\"",
            "async": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "vp \"コンテキストを圧縮するわよ！\"",
            "async": true
          }
        ]
      }
    ]
{{- end }}
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true
  },
  "language": "Japanese",
{{- if eq .chezmoi.os "darwin" }}
  "sandbox": {
    "excludedCommands": [
      "vp"
    ]
  },
{{- end }}
  "alwaysThinkingEnabled": true
}
